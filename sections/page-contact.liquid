{{ 'page-contact.css' | asset_url | stylesheet_tag }}

<div class="page-contact-section color-{{ section.settings.color_scheme }}">
  {%- for block in section.blocks -%}
    <div class="page-contact-block {% if section.blocks.size == 1 %}page-contact-block--full{% endif %}">
      {%- if block.settings.img != blank -%}
        {%- assign img = block.settings.img -%}
        {{ img | image_url: width: img.width | image_tag: class: 'page-contact-block__img' }}
      {%- endif -%}
      {%- if block.settings.title != blank -%}
        <h2 class="page-contact-block__title">{{ block.settings.title }} </h2>
      {%- endif -%}
      {%- if block.settings.text != blank -%}
        <p class="page-contact-block__text">{{ block.settings.text }}</p>
      {%- endif -%}
      {%- if block.settings.button_text != blank -%}
        <a href="{{ block.settings.button_link }}" class="page-contact-block__link button">{{ block.settings.button_text }}</a>
      {%- endif -%}
    </div>
  {%- endfor -%}
</div>

{% schema %}
  {
  "name": "Page Contact",
  "class": "page-contact",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    }
  ],
  "blocks": [
    {
      "name": "Block",
      "type": "block",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Img"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "html",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        }
        
      ]
    }
  ],
  "presets": [
    {
      "name": "Page Contact"
    }
  ]
}  
{% endschema %}